<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/txtTRonda" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.101"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"/>
    <Button
            android:text="@string/green"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btnGreen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRed" app:layout_constraintEnd_toStartOf="@+id/btnYellow"
            android:layout_marginEnd="16dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/ColorVerde"
    />
    <Button
            android:text="@string/blue"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btnBlue"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTRonda" app:layout_constraintStart_toEndOf="@+id/btnRed"
            android:layout_marginStart="16dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btnYellow"
            android:background="@color/ColorAzul"

    />
    <Button
            android:text="@string/red"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btnRed"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTRonda" app:layout_constraintEnd_toStartOf="@+id/btnBlue"
            android:layout_marginEnd="16dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btnGreen"
            android:background="@color/ColorRojo"

    />
    <Button
            android:text="@string/yellow"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/btnYellow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBlue" app:layout_constraintStart_toEndOf="@+id/btnGreen"
            android:layout_marginStart="16dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/ColorAmarillo"
    />
    <Button
            android:text="@string/btnIniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIniciar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.979"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>